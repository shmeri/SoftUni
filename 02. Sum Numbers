namespace _02.SumNumbers
{
    using System;
    using System.Linq;

    public class SumNum
    {
        public static void Main()
        {
            var input = Console.ReadLine()
                               .Split(new[] { ' ', ',' }, StringSplitOptions.RemoveEmptyEntries)
                               .Select(int.Parse)
                               .ToArray();
            Console.WriteLine(input.Count());
            Console.WriteLine(input.Sum()); 
        }
    }
}
